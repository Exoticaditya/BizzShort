# Environment Variables for BizzShort
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/bizzshort?retryWrites=true&w=majority

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_characters
JWT_EXPIRE=30d

# CORS Allowed Origins (comma-separated)
CORS_ORIGIN=https://bizzshort.com,https://www.bizzshort.com,http://localhost:3000

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880

# Admin Setup Key (for emergency setup route)
SETUP_KEY=secure_setup_123_change_in_production
